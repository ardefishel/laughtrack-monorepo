{
  "name": "laughtrack-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "check": "bun --filter '*' check",
    "lint": "bun --filter '*' lint",
    "clean": "bun --filter '*' clean && rm -rf node_modules bun.lock packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "mobile": "bun run --cwd apps/mobile start",
    "mobile:ios": "bun run --cwd apps/mobile ios",
    "mobile:ios:device": "bun run --cwd apps/mobile ios:device",
    "mobile:android": "bun run --cwd apps/mobile android",
    "mobile:lint": "bun run --cwd apps/mobile lint",
    "mobile:test": "bun run --cwd apps/mobile test",
    "backend": "bun run --cwd apps/backend dev",
    "backend:build": "bun run --cwd apps/backend build",
    "backend:check": "bun run --cwd apps/backend check",
    "backend:format": "bun run --cwd apps/backend format",
    "db:generate": "bun run --cwd apps/backend db:generate",
    "db:migrate": "bun run --cwd apps/backend db:migrate",
    "db:push": "bun run --cwd apps/backend db:push",
    "db:studio": "bun run --cwd apps/backend db:studio",
    "docker:up": "bun run --cwd apps/backend docker:up",
    "docker:down": "bun run --cwd apps/backend docker:down",
    "docker:logs": "bun run --cwd apps/backend docker:logs",
    "build:packages": "bun run --filter '@laughtrack/*' build"
  },
  "devDependencies": {
    "babel-jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  }
}