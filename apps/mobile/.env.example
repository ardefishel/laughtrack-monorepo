# Enable verbose logging in dev (set false for production)
EXPO_PUBLIC_VERBOSE_LOGS=true

# Backend API URL — must match the backend's PORT and host
EXPO_PUBLIC_API_URL=http://localhost:3000

# Google OAuth — get from Google Cloud Console → APIs & Services → Credentials
# Web client ID: used for Android and web auth flows
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id.apps.googleusercontent.com
# iOS client ID: used for iOS-specific Google Sign-In (create an iOS OAuth client in GCP)
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id.apps.googleusercontent.com