# Database — PostgreSQL connection (use docker:up for local dev)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=laughtrack
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/laughtrack

# better-auth — generate a random secret: openssl rand -base64 32
AUTH_SECRET=
AUTH_URL=http://localhost:3000

# Google OAuth — get from Google Cloud Console → APIs & Services → Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Server
PORT=3000
NODE_ENV=development

# Cloudflare R2 — for audio file storage; get from Cloudflare dashboard → R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=laughtrack-audio
